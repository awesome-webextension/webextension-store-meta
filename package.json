{
  "name": "webextension-store-meta",
  "version": "1.2.10",
  "description": "Get browser extension(webextension) item meta from Chrome Web Store and Firefox add-ons.",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "rm -rf lib && tsc",
    "ts-check": "tsc --noEmit",
    "test": "vitest",
    "docs": "typedoc --options typedoc.json",
    "coverage": "vitest --coverage.enabled --coverage.reporter='json-summary' --coverage.reporter=text",
    "lint": "biome lint src/**/* && tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awesome-webextension/webextension-store-meta.git"
  },
  "keywords": [
    "chrome",
    "firefox",
    "amo",
    "extension",
    "webextension",
    "addon",
    "add-on",
    "web-store",
    "webstore",
    "chrome-app",
    "chrome-extension",
    "chrome-theme",
    "chrome-web-store",
    "firefox-addons",
    "itemprop",
    "meta"
  ],
  "author": "CRIMX <straybugs@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/awesome-webextension/webextension-store-meta/issues"
  },
  "homepage": "https://github.com/awesome-webextension/webextension-store-meta#readme",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/node": "^20.1.7",
    "@vitest/coverage-v8": "^1.5.0",
    "cheerio": "1.0.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.5.4",
    "vitest": "^1.5.0"
  },
  "dependencies": {
    "domhandler": "^4.0.0",
    "htmlparser2": "^6.1.0",
    "pretty-bytes": "^6.1.1",
    "undici": "^6.11.1"
  }
}
